{
  "timeLabel": {
    "type": "label",
    "value": "Configure time display"
  },
  "showTime": {
    "type": "checkbox",
    "value": true,
    "text": "Display time"
  },
  "displayAtTop": {
    "type": "checkbox",
    "value": false,
    "text": "Display time at the top of the screen"
  },
  "showSeconds": {
    "type": "checkbox",
    "value": false,
    "text": "Show seconds"
  },
  "distance": {
    "type": "slider",
    "value": 12,
    "max": 60,
    "min": 0,
    "step": 4,
    "text": "Distance from screen border"
  },
  "units": {
    "type": "dropdown",
    "value": 0,
    "text": "Unit system",
    "items": ["Metric", "Imperial"]
  },

  "fontLabel": {
    "type": "label",
    "value": "Choose a font"
  },
  "fontFamily": {
    "type": "dropdown",
    "value": 0,
    "text": "Display font",
    "items": ["Montserrat", "Nanum Gothic", "Prompt", "Quicksand", "Raleway"]
  },
  "fontSize": {
    "type": "dropdown",
    "value": 1,
    "text": "Font size",
    "items": ["Small", "Medium", "Large", "Max"]
  }
}
